using System;
					
public class unit1aChallenge
{
	public static void Main()
	{
		//interger
		int myNum = 12;
		//extend challange
		int mySecondNum = 4;
		int myThirdNum = 8;
		//Floating-Point
		double myFloat = 12.5;
		double myFloat2 = 6.5;
		
		//boolean
		bool myBool = true;
		//string
		string sayThis = "tekken 8";
		string sayThat = "Azucina is my main";
		
		//display que
		
		Console.WriteLine("this is an interger " + myNum);
		Console.WriteLine("This is a Floating Point " + myFloat);
		Console.WriteLine("This is a boolean Value " + myBool);
		Console.WriteLine("This game is " + sayThis);
		
		//extend challange operations and basic arithmetic
		
		Console.WriteLine("in " + sayThis +" " + sayThat + "."); // "+" requires that I add the space in as well
		Console.WriteLine(myNum * mySecondNum / myThirdNum);
		Console.WriteLine(myFloat2 - myFloat);
		
		//Challenge 3 User input!
		
		Console.WriteLine("Write a number!");//I start with the prompt to let user know I want a number
		int yourNum1 = Convert.ToInt32(Console.ReadLine()); //Console.ReadLine() takes user input and nesting it in Convert.ToInt32() converts the text into a value we can use for math. (there is an error that occures when anything that isnt a number is enterd instead.)
		Console.WriteLine("Wrte another number.");
		int yourNum2 = Convert.ToInt32(Console.ReadLine());
		Console.WriteLine("Tell me your name");
		string name = Console.ReadLine();
		int x = yourNum1; //This is where I convert the input numbers to values I can easily combine
		int y = yourNum2;
		int Sum1 = x + y; //this is where I add the values together to creat the Sum of them combined
		Console.WriteLine("Character Name " + name);
		Console.WriteLine("Your numbers added are " + Sum1); //this is where I display the Sum1.
		
	}
}
